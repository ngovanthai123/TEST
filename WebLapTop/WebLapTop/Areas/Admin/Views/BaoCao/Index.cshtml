
@{
    var thangHienTai = DateTime.Today.Month;
    var tonkho = (int)ViewData["tonkho"];
    var soluonghoadon = (int)ViewData["soluonghoadon"];
    var soluongsanpham = (int)ViewData["soluongsanpham"];
    var doanhthu = (int)ViewData["doanhthu"];
    var month = (int)ViewData["month"];
}

<form action="/admin/baocao/index" method="get" style="text-align:center">
    <select name="month">
        @for(var i = 1; i <= thangHienTai; i++){
        if(i == month){
        <option value="@i" selected>@i</option>
        }else{
        <option value="@i">@i</option>

        }

        }
    </select>
    <input type="submit" value="Báo Cáo" />
</form>


<p style="text-align:center">Tồn kho: @tonkho</p>
<p style="text-align:center">Số lượng hóa đơn: @soluonghoadon</p>
<p style="text-align:center">Số lượng sản phẩm: @soluongsanpham</p>
<p style="text-align:center">Doanh thu: @doanhthu</p>