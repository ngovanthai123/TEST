@model WebLapTop.Models.Sanpham

@{
    ViewData["Title"] = "Edit";
}

<div style="margin:5px;" class="row">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Sửa sản Phẩm</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-3">
                                <label>Nơi Sản Xuất</label>
                            </div>
                            <div class="col-md-8 form-group">
                                @Html.DropDownList("IdnoiSanXuat", null, "-- Chọn --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdnoiSanXuat, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3">
                                <label>Dòng Sản Phẩm</label>
                            </div>
                            <div class="col-md-8 form-group">
                                @Html.DropDownList("IddongSanPham", null, "-- Chọn --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IddongSanPham, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3">
                                <label>Loại phụ kiện</label>
                            </div>
                            <div class="col-md-8 form-group">
                                @Html.DropDownList("IdloaiPhuKien", null, "-- Chọn --", htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.IdloaiPhuKien, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3">
                                <label>Tên Sản Phẩm</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="TenSanPham" class="form-control" placeholder="Tên Sản Phẩm" />
                            </div>
                            <div class="col-md-3">
                                <label>Ảnh Sản Phẩm</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input type="hidden" asp-for="AnhSanPham" class="form-control" />
                                <input type="file" name="file" multiple />
                            </div>
                            <div class="col-md-3">
                                <label>Giá bán</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="GiaBan" class="form-control" placeholder="Giá" />
                            </div>
                            <div class="col-md-3">
                                <label>Giá khuyến mãi</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="GiaKhuyenMai" class="form-control" placeholder="Giá khuyến mãi" />
                            </div>
                            <div class="col-md-3">
                                <label>Ngày bắt đầu khuyến mãi</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="NgayBatDauKhuyenMai" class="form-control" placeholder="Giá bán" />
                            </div>
                            <div class="col-md-3">
                                <label>Ngày kết thúc khuyến mãi</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="NgayKetThucKhuyenMai" class="form-control" placeholder="Giá khuyến mãi" />
                            </div>
                            <div class="col-md-3">
                                <label>Số Lượng</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <input asp-for="SoLuong" class="form-control" placeholder="Số Lượng" />
                            </div>
                            <div class="col-md-3">
                                <label>Mô Tả</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <textarea id="editor" asp-for="MoTa" class="form-control" placeholder="Mô Tả"></textarea>
                            </div>
                            <div class="col-md-3">
                                <label>Bảo Hành</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <textarea asp-for="BaoHanh" class="form-control" placeholder="Bảo Hành"></textarea>
                            </div>
                            <div class="col-md-3">
                                <label>Lượt xem</label>
                            </div>
                            <div class="col-md-8 form-group">
                                <textarea asp-for="LuotXem" class="form-control" placeholder="Lượt xem"></textarea>
                            </div>

                            <div class="col-sm-11 d-flex justify-content-end">
                                <input type="submit" value="Cập nhập" class="btn btn-primary" />

                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script src="https://cdn.ckeditor.com/ckeditor5/32.0.0/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#editor'))
        .catch(error => {
            console.error(error);
        });
</script>

