@model WebLapTop.Models.Khachhang

@{
    ViewData["Title"] = "Edit";
}

<div style="margin:5px;" class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="KhachHang" asp-action="Index">Quay về danh sách</a>
            <span class="breadcrumb-item active"> Thêm khách hàng</span>
        </nav>
    </div>
</div>
<div style="margin:5px;" class="row">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Thêm khách hàng</h4>
        </div>
        <div class="card-content">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-3">
                        <label>Họ và tên</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input asp-for="HoVaTen" class="form-control" placeholder="Họ và tên" />
                    </div>
                    <div class="col-md-3">
                        <label>Số điện thoại</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input asp-for="SoDienThoai" class="form-control" placeholder="Số điện thoại" />
                    </div>
                    <div class="col-md-3">
                        <label>Địa chỉ</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input asp-for="DiaChi" class="form-control" placeholder="Địa chỉ" />
                    </div>
                    <div class="col-md-3">
                        <label>Email</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                    </div>
                    <div class="col-md-3">
                        <label>Tên đăng nhập</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input asp-for="TenDangNhap" class="form-control" placeholder="Tên đăng nhập" />
                    </div>
                    <div class="col-md-3">
                        <label>Mật khẩu</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input asp-for="MatKhau" class="form-control" placeholder="Mật khẩu" />
                    </div>
                    <div class="col-md-3">
                        <label>Xác nhận mật khẩu</label>
                    </div>
                    <div class="col-md-8 form-group">
                        <input type="hidden" asp-for="XacNhanMatKhau" class="form-control" />
                        <input asp-for="XacNhanMatKhau" class="form-control" placeholder="Xác nhận mật khẩu" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
