@model IEnumerable<WebLapTop.Models.Hoadon>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a style="margin-left:20px;" class="btn btn-primary btn-tone m-r-5" asp-action="Create">Create New</a>
</p>
<div style="margin:5px;" class="card mt-1">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        <table id="table1">

            <tr class="text-center">
                <th width="5%">#</th>
                <th scope="col">Tên khách hàng </th>
                <th scope="col">Tên nhân viên </th>
                <th scope="col">Số điện thoại </th>
                <th scope="col">Tổng giá </th>
                <th scope="col">Ngày lập </th>
                <th scope="col">Nơi nhận </th>
                <th scope="col">Ngày xác nhận </th>
                <th scope="col">Tình trạng</th>
                <th scope="col">Ghi chú </th>
                <th></th>
                <th></th>
                <th width="2%"></th>
            </tr>

            @{ int stt = 1; }
            @foreach (var item in Model)
            {
        <tr>
            <td>@stt</td>
            <td>
                @Html.DisplayFor(modelItem => item.IdkhachHangNavigation.HoVaTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdnhanVienNavigation.HoVaTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDienThoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongGia)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.NgayLap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiNhan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayXacNhan)
            </td>
            <td>
                @if (item.TinhTrang == 0)
                {
                    <span>Đơn hàng mới</span>
                }
                else if (item.TinhTrang == 1)
                {
                    <span>Đang xác nhận</span>
                }
                else if (item.TinhTrang == 2)
                {
                    <span>Đã hủy</span>
                }
                else if (item.TinhTrang == 3)
                {
                    <span>Đang đóng gói</span>
                }
                else if (item.TinhTrang == 4)
                {
                    <span>Đang gởi vận chuyển</span>
                }
                else if (item.TinhTrang == 5)
                {
                    <span>Đang chuyển</span>
                }
                else if (item.TinhTrang == 6)
                {
                    <span>Thất bại</span>
                }
                else if (item.TinhTrang == 7)
                {
                    <span>Đang chuyển hoàn</span>
                }
                else if (item.TinhTrang == 8)
                {
                    <span>Đã chuyển hoàn</span>
                }
                else
                {
                    <span>Thành công</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GhiChu)
            </td>
            <td class="text-center">
                <a asp-action="Edit" asp-route-id="@item.Id"><img src="~/images/wrench.jpg" /></a>
            </td>
            <td class="text-center">
                <a asp-action="Details" asp-route-id="@item.Id"><img src="~/images/list.jpg" /></a>
            </td>
            <td class="text-center">
                <a asp-action="Delete" asp-route-id="@item.Id"><img src="~/images/delete.jpg" /></a>
            </td>
        </tr>
                stt++;
            }

        </table>
    </div>
</div>



