@model List<WebLapTop.Models.CartLove>
<h3 class="text-center" style="color: #3150a2; line-height: 46px;">Sản phẩm yêu thích của bạn</h3>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Count > 0)
{
    <div id="store" class="col-md-9">
        <!-- store top filter -->
        <div class="store-filter clearfix">
            <div class="store-sort">

            </div>

        </div>
        <!-- /store top filter -->
        <!-- store products -->
        <div class="row">

            <!-- product -->
            @foreach (var cartitem in Model)
            {
                @if (cartitem.Product1.GiaKhuyenMai > 0)
                {
                    <div class="col-md-4 col-xs-6">
                        <div class="product">
                            <a asp-controller="SanPham" asp-action="Details" asp-route-id="@cartitem.Product1.Id">
                                <img src="~/images/@Html.DisplayFor(modelItem => cartitem.Product1.AnhSanPham)" style="max-width:100%" />
                            </a>
                            <div class="product-body" style="min-height: 275px;">
                                <p class="product-category">Số lượng: @cartitem.Product1.SoLuong</p>
                                <h3 style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                                    @cartitem.Product1.TenSanPham
                                </h3>
                                <h5 class="product-old-price"><del class="product-old-price">Giá: @String.Format("{0:N0}", cartitem.Product1.GiaBan) VNĐ</del></h5>

                                <h5 class="product-old-price" style="color:red">Giá KM: @String.Format("{0:N0}", cartitem.Product1.GiaKhuyenMai) VNĐ</h5>

                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product-btns">
                                    <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>
                                    <a class="quick-view" asp-controller="SanPham" asp-action="Details" asp-route-id="@cartitem.Product1.Id"><i class="fa fa-eye"></i><span class="tooltipp"></span></a>
                                </div>
                            </div>
                            <div class="add-to-cart">
                                <a class="add-to-cart-btn" asp-controller="Home" asp-action="AddToCart" asp-route-id="@cartitem.Product1.Id"><i class="fa fa-shopping-cart"></i> add to cart</a>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-md-4 col-xs-6">
                        <div class="product">
                            <a asp-controller="SanPham" asp-action="Details" asp-route-id="@cartitem.Product1.Id">
                                <img src="~/images/@Html.DisplayFor(modelItem => cartitem.Product1.AnhSanPham)" style="max-width:100%" />
                            </a>
                            <div class="product-body" style="min-height: 275px;">
                                <p class="product-category">Số lượng: @cartitem.Product1.SoLuong</p>
                                <h3 style="overflow: hidden; text-overflow: ellipsis; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                                    @cartitem.Product1.TenSanPham
                                </h3>
                                <h5 class="product-old-price">Giá: @String.Format("{0:N0}", cartitem.Product1.GiaBan) VNĐ</h5>
                                @*                            <h5 class="product-old-price" style="color:red">Giá KM: @String.Format("{0:N0}", item.GiaKhuyenMai) VNĐ</h5>
                                *@
                                <div class="product-rating">
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </div>
                                <div class="product-btns">
                                    <button class="add-to-compare"><i class="fa fa-exchange"></i><span class="tooltipp">add to compare</span></button>
                                    <a class="quick-view" asp-controller="SanPham" asp-action="Details" asp-route-id="@cartitem.Product1.Id"><i class="fa fa-eye"></i><span class="tooltipp"></span></a>
                                </div>
                            </div>
                            <div class="add-to-cart">
                                <a class="add-to-cart-btn" asp-controller="Home" asp-action="AddToCart" asp-route-id="@cartitem.Product1.Id"><i class="fa fa-shopping-cart"></i> add to cart</a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <!-- /store products -->
        <!-- store bottom filter -->
        <!-- /store bottom filter -->
    </div>
}
else
{
    <p class="alert alert-danger ">Giỏ hàng trống</p>
}


